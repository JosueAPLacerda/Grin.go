<div class="row">
  <% @users.each do |user| %>
    <div class="col-sm-6 mb-3 mb-sm-0">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= user.name %></h5>
          <p class="card-text"><%= user.city %></p>
          <%= link_to "Visitar o perfil", profile_path(user), class: "btn btn-info" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
