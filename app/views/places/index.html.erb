<div class="container mt-5 mb-5">

  <h1 class="d-flex justify-content-center mb-5">Para aonde vamos hoje?</h1>
    <div class="cards">
      <% @trips.each_with_index do |place, index| %>
        <%=  link_to place_path(place) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image[index] %>)">
            <%= place.city %><br>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="d-flex justify-content-center w-100 mt-5">
        <%= link_to "Voltar", places_path, class: "btn btn-primary w-10" %>
      </div>
</div>
