<%= simple_form_for(@trip) do |f| %>
  <%= f.input :legend %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.fields_for :place, @place do |p| %>
    <%= p.input :city %>
    <%= p.input :country, collection: ISO3166::Country.all_names_with_codes, include_blank: true %>
    <%= p.input :neighborhood %>
  <% end %>
<%= f.submit %>
<% end %>
