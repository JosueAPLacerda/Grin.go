<h2>Sign up</h2>


<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs w-25">
    <%= f.input :name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" } %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :about, required: true %>
    <%= f.input :address, required: true %>
    <%= f.input :country_users, required: true %>
    <%= f.input :city, required: true %>
    <%= f.input :language, required: true %>
    <%= f.input :interests, required: true %>
    <%= f.input :occupation, required: true %>
    <%= f.input :nacionality, required: true %>
    <%= f.input :age, required: true %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <div class="d-flex">
      <%= f.input :visitor, as: :boolean, wrapper_html: { id: "visitor-input" } %>
    </div>
    <div class="d-flex">
      <%= f.input :host, as: :boolean, wrapper_html: { id: "host-input" } %>
    </div>
  </div>

  <%= f.input :photo, as: :file %>
  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "nav-link" %>
  </div>
<% end %>



<%= render "devise/shared/links" %>

<script>
  const visitorInput = document.querySelector("#visitor-input");
  const visitorSpan = document.querySelector("#visitor-span");

  const hostInput = document.querySelector("#host-input");
  const hostSpan = document.querySelector("#host-span");

  visitorInput.addEventListener("mouseover", () => { visitorSpan.style.display = "block" })
  visitorInput.addEventListener("mouseleave", () => { visitorSpan.style.display = "none" })

  visitorInput.addEventListener("mouseover", () => { hostSpan.style.display = "block" })
  visitorInput.addEventListener("mouseleave", () => { hostSpan.style.display = "none" })
</script>
