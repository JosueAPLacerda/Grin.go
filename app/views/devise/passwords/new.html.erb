<div class="password-conntainer">
  <h2>Esqueceu a sua senha?</h2>

  <%= image_tag "password.png", class: "passicon1" %>

  <%= image_tag "pass-lock.png", class: "passicon2" %>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

      <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    </div>


    <%# <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
    <%# </div> %>

    <div class="form-actions">
      <%= f.button :submit, "Envie instruções de recuperação de senha" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
